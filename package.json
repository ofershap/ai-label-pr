{
  "name": "ai-label-pr",
  "version": "1.0.0",
  "description": "GitHub Action that auto-labels PRs using AI â€” size labels (XS-XXL) and type labels (feature, fix, docs, refactor)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "github-action",
    "ai",
    "pr-labels",
    "pull-request",
    "size",
    "type",
    "openai",
    "anthropic",
    "automation",
    "developer-tools"
  ],
  "author": "Ofer Shapira",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ofershap/ai-label-pr.git"
  },
  "bugs": {
    "url": "https://github.com/ofershap/ai-label-pr/issues"
  },
  "homepage": "https://github.com/ofershap/ai-label-pr#readme",
  "dependencies": {
    "@actions/core": "^1.11.0",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.2.0",
    "semantic-release": "^24.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ]
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --fix",
    "*.{json,md,yml,yaml}": "prettier --write"
  }
}
